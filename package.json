{
  "name": "github-discord-stats",
  "version": "2.0.0",
  "description": "Automated GitHub organization stats to Discord with job description fetching",
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint .github/scripts --max-warnings 0",
    "syntax-check": "find .github/scripts -name '*.js' -type f -exec node -c {} \\;",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "daily": "node .github/scripts/daily-stats.js",
    "weekly": "node .github/scripts/weekly-summary.js",
    "test:descriptions": "node test-all-platforms.js",
    "test:integration": "node test-integration.js"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "@zapply/job-board-shared": "^1.0.0",
    "axios": "^1.13.2",
    "cheerio": "^1.1.2",
    "discord.js": "^14.23.2",
    "node-fetch": "^2.7.0",
    "puppeteer": "^24.30.0",
    "sanitize-html": "^2.11.0",
    "turndown": "^7.1.2",
    "turndown-plugin-gfm": "^1.0.2"
  },
  "author": "zapplyjobs",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.57.0",
    "husky": "^8.0.3",
    "jest": "^30.2.0",
    "lint-staged": "^15.2.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix --max-warnings 0",
      "node -c"
    ]
  }
}
